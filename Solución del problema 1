n=int(input('Ingrese el número de filas: '))
while n>9 or n<1: 
    print('El número ingresado no se encuentra en el rango de 1 a 9')
    n=int(input('Ingrese el número de filas: '))
for i in range (1,n+1):
    for j in range (1,i+1):
        if 1 == j:
            print((n - i +1)*" ", end="")
        print(j, end = ' ')
    print (" ")
